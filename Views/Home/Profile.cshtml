@{
    ViewData["Title"] = "Profil Bilgilerim";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="display-1 text-primary">👤</div>
                        <h2 class="fw-bold">Profil Bilgileri</h2>
                        <p class="text-muted">Hesap bilgilerinizi buradan yönetebilirsiniz.</p>
                    </div>

                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Ad Soyad</label>
                                <input type="text" class="form-control bg-light" value="Yazılım Öğrencisi" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">E-posta</label>
                                <input type="email" class="form-control bg-light" value="ogrenci@university.edu.tr" readonly>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Okul / Bölüm</label>
                                <input type="text" class="form-control bg-light" value="Yazılım Mühendisliği - 3. Sınıf" readonly>
                            </div>
                        </div>

                        <div class="mt-4 d-grid">
                            <button type="button" class="btn btn-primary btn-lg">Bilgileri Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>