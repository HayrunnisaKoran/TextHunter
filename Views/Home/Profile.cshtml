@{
    ViewData["Title"] = "Profil Bilgilerim";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="display-1 text-primary">👤</div>
                        <h2 class="fw-bold">Profil Bilgileri</h2>
                        <p class="text-muted">Hesap bilgilerinizi buradan yönetebilirsiniz.</p>
                    </div>

                    @{
                        var userId = Context.Session.GetInt32("UserId");
                        var userFullName = Context.Session.GetString("UserFullName");
                        var userEmail = Context.Session.GetString("UserEmail");
                    }

                    @if (userId.HasValue)
                    {
                        <form asp-action="UpdateProfile" method="post">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Ad Soyad</label>
                                    <input type="text" name="FullName" class="form-control" value="@userFullName" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">E-posta</label>
                                    <input type="email" name="Email" class="form-control" value="@userEmail" required>
                                </div>
                            </div>

                            <div class="mt-4 d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Bilgileri Güncelle</button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <p class="mb-0">Profil bilgilerinizi görmek için giriş yapmanız gerekiyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>