@{
    ViewData["Title"] = "Giriş Yap";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h2 class="text-center fw-bold mb-4">Hoş Geldiniz</h2>
                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label class="form-label">E-posta Adresi</label>
                            <input type="email" name="Email" class="form-control" placeholder="adiniz@ornek.com" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Şifre</label>
                            <input type="password" name="Password" class="form-control" placeholder="••••••••" required>
                        </div>
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <p class="text-muted">Hesabınız yok mu? <a asp-action="Register" class="text-primary fw-bold text-decoration-none">Kayıt Olun</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>