@model TextHunter.Models.ComparisonViewModel
@{
    ViewData["Title"] = "Model Karşılaştırma";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold" style="color:#8B008B"> 🔍 Model Karşılaştırma Merkezi</h1>
        <p class="lead text-muted">Aynı metni 3 farklı yapay zeka modeli ile analiz edin ve sonuçları karşılaştırın.</p>
    </div>

    <div class="row g-4">
        <div class="col-lg-5">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0 fw-bold">Analiz Edilecek Metin</h5>
                </div>
                <div class="card-body">
                    <form asp-action="ModelComparison" method="post">
                        <div class="mb-3">
                            <textarea asp-for="Text" class="form-control border-0 bg-light" rows="12"
                                      placeholder="Analiz etmek istediğiniz metni buraya yapıştırın..."></textarea>
                            <span asp-validation-for="Text" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="button" class="btn btn-outline-secondary px-4" onclick="clearText()">Temizle</button>
                            <button type="submit" class="btn btn-primary flex-grow-1 fw-bold">Analiz Et (Tüm Modeller)</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0 fw-bold">Model Tahminleri (US-5)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Results != null && Model.Results.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Model Adı</th>
                                        <th>Tahmin</th>
                                        <th style="width: 40%;">Olasılık Dağılımı</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var result in Model.Results)
                                    {
                                        <tr>
                                            <td class="fw-bold text-dark">@result.Value.ModelName</td>
                                            <td>
                                                <span class="badge rounded-pill p-2 px-3 @(result.Value.Prediction == "Human" ? "bg-success" : "bg-danger")">
                                                    @(result.Value.Prediction == "Human" ? "👤 İnsan" : "🤖 Yapay Zeka")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="progress flex-grow-1" style="height: 24px; font-size: 0.75rem;">
                                                        <div class="progress-bar bg-success" role="progressbar"
                                                             style="width: @(result.Value.HumanProbability * 100)%"
                                                             title="İnsan Olasılığı">
                                                            %@((result.Value.HumanProbability * 100).ToString("F0"))
                                                        </div>
                                                        <div class="progress-bar bg-danger" role="progressbar"
                                                             style="width: @(result.Value.AIProbability * 100)%"
                                                             title="Yapay Zeka Olasılığı">
                                                            %@((result.Value.AIProbability * 100).ToString("F0"))
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="d-flex justify-content-between x-small text-muted mt-1" style="font-size: 0.7rem;">
                                                    <span>İnsan</span>
                                                    <span>Yapay Zeka</span>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <img src="~/images/placeholder_ai.png" alt="Analiz Bekleniyor" class="img-fluid mb-3" style="max-width: 150px; opacity: 0.5;">
                            <p class="text-muted">Sonuçları görmek için sol tarafa metin girip <strong>Analiz Et</strong> butonuna tıklayın.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function clearText() {
            document.getElementById('Text').value = '';
        }
    </script>
}
