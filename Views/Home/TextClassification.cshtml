@using System.Globalization
@model TextHunter.Models.ClassificationViewModel
@{
    ViewData["Title"] = "Text Classification";
    // Başlıkta kullanılan mor renk
    string themeColor = "#8B008B";
}

<div class="container mt-4">

    <h1 class="display-5 fw-bold" style="color:@themeColor"> 🔍 Metin Sınıflandırması</h1>
    <p class="text-center text-muted mb-4">Girdiğiniz makaleleri çeşitli ML modelleri kullanarak sınıflandırın.</p>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="TextClassification" method="post">
                <div class="mb-3">
                    <label for="Text" class="form-label">Analiz Edilecek Metin</label>
                    <textarea asp-for="Text" class="form-control" rows="10" placeholder="Analiz etmek istediğiniz metni buraya yapıştırın..."></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="SelectedModel" class="form-label">Bir sınıflandırma modeli seçin</label>
                    <select asp-for="SelectedModel" class="form-select" asp-items="@(new SelectList(Model.AvailableModels))">
                        <option value="" selected disabled>Model Seçiniz...</option>
                    </select>
                    <span asp-validation-for="SelectedModel" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-outline-secondary" onclick="clearText()">Temizle</button>
                    <button type="submit" class="btn text-white flex-grow-1" style="background-color: @themeColor">Analiz Et</button>
                </div>
            </form>
        </div>

        <div class="col-md-6">
            <h3>Tahmin Edilen Etiket</h3>

            @if (Model.Result != null)
            {
                <div class="card mt-3 shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title display-6 fw-bold mb-4" style="color: @themeColor">
                            @Model.Result.Prediction
                        </h2>

                        <div class="mt-4">
                            @{
                                // Türkçe virgül sorununu çözmek için nokta ile formatlıyoruz
                                var humanPercent = (Model.Result.HumanProbability * 100).ToString("0", CultureInfo.InvariantCulture);
                                var aiPercent = (Model.Result.AIProbability * 100).ToString("0", CultureInfo.InvariantCulture);
                            }

                            <div class="mb-4">
                                <div class="d-flex justify-content-between mb-1">
                                    <strong>İnsan (Human):</strong>
                                    <span>%@humanPercent</span>
                                </div>
                                <div class="progress" style="height: 30px; background-color: #e9ecef;">
                                    <div class="progress-bar" role="progressbar"
                                         style="width: @humanPercent%; background-color: @themeColor;"
                                         aria-valuenow="@humanPercent"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                        @humanPercent%
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <strong>Yapay Zeka (AI):</strong>
                                    <span>%@aiPercent</span>
                                </div>
                                <div class="progress" style="height: 30px; background-color: #e9ecef;">
                                    <div class="progress-bar" role="progressbar"
                                         style="width: @aiPercent%; background-color: @themeColor;"
                                         aria-valuenow="@aiPercent"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                        @aiPercent%
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr />
                        <p class="text-muted mt-3 mb-0 text-end">
                            <small>Kullanılan Model: <strong>@Model.Result.ModelName</strong></small>
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-light border mt-3" role="alert">
                    👉 Metin girin ve tahminleri görmek için bir model seçip <strong>'Analiz Et'</strong> butonuna basın.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function clearText() {
            document.getElementById('Text').value = '';
        }
    </script>
}
