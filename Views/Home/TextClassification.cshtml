@model TextHunter.Models.ClassificationViewModel
@{
    ViewData["Title"] = "Text Classification";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Text Classification</h1>
    <p class="text-center text-muted mb-4">Classify your input using various ML and NLP models.</p>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="TextClassification" method="post">
                <div class="mb-3">
                    <label for="Text" class="form-label">Enter your text</label>
                    <textarea asp-for="Text" class="form-control" rows="10" placeholder="Enter your text here..."></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="SelectedModel" class="form-label">Choose a classification model</label>
                    <select asp-for="SelectedModel" class="form-select" asp-items="@(new SelectList(Model.AvailableModels))">
                    </select>
                </div>

                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-outline-secondary" onclick="clearText()">Clear</button>
                    <button type="submit" class="btn btn-primary flex-grow-1">Submit</button>
                </div>
            </form>
        </div>

        <div class="col-md-6">
            <h3>Predicted Label</h3>
            @if (Model.Result != null)
            {
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Result.Prediction</h5>
                        <div class="mt-3">
                            <div class="mb-2">
                                <strong>Human:</strong>
                                <div class="progress" style="height: 25px;">
                                    <div class="progress-bar bg-success" role="progressbar" 
                                         style="width: @(Model.Result.HumanProbability * 100)%" 
                                         aria-valuenow="@(Model.Result.HumanProbability * 100)" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                        @((Model.Result.HumanProbability * 100).ToString("F2"))%
                                    </div>
                                </div>
                            </div>
                            <div>
                                <strong>AI:</strong>
                                <div class="progress" style="height: 25px;">
                                    <div class="progress-bar bg-danger" role="progressbar" 
                                         style="width: @(Model.Result.AIProbability * 100)%" 
                                         aria-valuenow="@(Model.Result.AIProbability * 100)" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                        @((Model.Result.AIProbability * 100).ToString("F2"))%
                                    </div>
                                </div>
                            </div>
                        </div>
                        <p class="text-muted mt-3 mb-0">
                            <small>Model: @Model.Result.ModelName</small>
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info mt-3">
                    Enter text and select a model to see predictions.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function clearText() {
            document.getElementById('Text').value = '';
        }
    </script>
}

